---
import PageName from "../components/PageName/PageName.astro";
import MainPageLayout from "../layouts/MainPageLayout.astro";
import StandartLayout from "../layouts/StandartLayout.astro";

const res = await fetch(
  `${
    import.meta.env.PUBLIC_URL
  }/api/contacts-page?populate[0]=page.documents&populate[1]=slider.image&populate[2]=pinned_links.image`
)
  .then((res) => res.json())
  .then((res) => res.data);
---

<StandartLayout title="Контакты">
  <PageName title="Контакты" />
  <MainPageLayout>
    <div class="zzz">
      <div set:html={res?.page?.content} />
      <div class="maps">
        <h1>Администрация Чаа-Хольского кожууна</h1>
        <iframe class="contact_map"
        src="https://yandex.ru/map-widget/v1/?um=constructor%3A218677cbf42fad5f1b7f9a69a1caa94ee8f375e92785883de323906634d8ccaa&amp;source=constructor" 
        width="1200" 
        height="400" 
        frameborder="0">
        </iframe>
      </div>
    </div>
  </MainPageLayout>
</StandartLayout>


<style>
.contact_map {
  margin-bottom: 0.75em;
}
.zzz {
  margin-top: 10px;
}
.paragraph_type{
}
.maps{
  margin-top: 20px;
  margin-bottom: 20px;
}
</style>